{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "emcc",
            "args": [
                "src/main.c",
                "src/triangle.c",
                "libs/dna/src/filesystem.c",
                "libs/dna/src/glad.c",
                "libs/dna/src/tglm.c",
                "libs/dna/src/game.c",
                "libs/dna/src/shader.c",
                "libs/dna/src/texture2d.c",
                "libs/dna/src/arrayrenderer.c",
                "libs/dna/src/elementrenderer.c",
                "libs/dna/src/resourcemanager.c",
                "libs/libcorefw.bc",
                "libs/libBlocksRuntime.bc",
                "-std=c18",
                "-fblocks",
                "-fenable-matrix",
                "-Ilibs/dna/include",
                // "-Iexternal/linmath.h",
                "-Iexternal/stb",
                "-Iinclude",
                "-s", "WASM=1",
                "-s", "USE_WEBGL2=1",
                "-s", "USE_GLFW=3",
                "-o", "docs/index.html",
                "--use-preload-plugins",
                "--preload-file", "data/shaders/es/triangle.fs",
                "--preload-file", "data/shaders/es/triangle.vs",
            ],

            "problemMatcher": {
                "owner": "emcc",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true

            }
        }
    ]
}
