{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "emcc",
            "args": [
                "examples/triangle.c",
                "libs/libcorefw.bc",
                "libs/libBlocksRuntime.bc",
                "-std=c18",
                "-fblocks",
                "-s", "WASM=1",
                "-s", "USE_WEBGL2=1",
                "-s", "USE_GLFW=3",
                "-o", "docs/index.html"
            ],

            "problemMatcher": {
                "owner": "emcc",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true

            }
        }
    ]
}
