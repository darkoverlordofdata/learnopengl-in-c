{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "emcc",
            "args": [
                "src/main.c",
                "src/shmupwarz.c",
                "libs/dna/src/arrayrenderer.c",
                "libs/dna/src/elementrenderer.c",
                "libs/dna/src/filesystem.c",
                "libs/dna/src/game.c",
                "libs/dna/src/glad.c",
                "libs/dna/src/resourcemanager.c",
                "libs/dna/src/shader.c",
                "libs/dna/src/texture2d.c",
                "libs/dna/src/tglm.c",
                "libs/libcorefw.bc",
                "-std=c18",
                "-I./src",
                "-I./include",
                "-I./libs/dna/include",
                "-I./external/stb",
                "-O3",
                "-s", "WASM=1",
                "-s", "USE_WEBGL2=1",
                "-s", "USE_GLFW=3",
                // "-s", "FULL_ES2=1",
                // "-s", "FULL_ES3=1",
                // "-s", "USE_SDL=2",
                // "-s", "USE_SDL_IMAGE=2",
                // "-s", "USE_SDL_MIXER=2",
                // "-s", "USE_SDL_TTF=2",
                // "-s", "SDL2_IMAGE_FORMATS=\'[\"png\"]\'",
                "-o", "docs/index.html",
                "--preload-file", "data"
            ],

            "problemMatcher": {
                "owner": "emcc",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true

            }
        }
    ]
}
